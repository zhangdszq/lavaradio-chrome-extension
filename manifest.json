{
    "manifest_version": 2,
    "name": "LavaRadio",
    "version": "1.0",
    "description": "The lavaradio extension that I made.",

    "background": {
         "scripts": [
            "src/background.js"
        ]
    },

    "browser_action": {
        "default_icon": "src/imgs/icon.png",
        "default_popup": "src/popup.html"
    },

    "permissions": [
        "background",
        "http://wwww.lavaradio.com",
        "http://www.lavaradio.com/api"
    ]
}